{
  "name": "@skarab/tsinit",
  "version": "0.0.0-development",
  "description": "Create a tsconfig file with all available options.",
  "author": {
    "name": "skarab42",
    "email": "contact@skarab42.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skarab42/tsinit.git"
  },
  "homepage": "https://github.com/skarab42/tsinit",
  "bugs": "https://github.com/skarab42/tsinit/issues",
  "funding": "https://github.com/sponsors/skarab42",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "./lib/init.js",
  "types": "./lib/init.d.ts",
  "bin": {
    "tsi": "./bin/init.js",
    "tsinit": "./bin/init.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "build": "tsc -p tsconfig.build.json",
    "tsinit": "pnpm build && node ./bin/init.js",
    "lint": "eslint ./src --fix --max-warnings=0",
    "format": "prettier **/* --write --cache --ignore-unknown",
    "semantic-release": "semantic-release --branches main"
  },
  "prettier": "@skarab/prettier-config",
  "dependencies": {
    "unleashed-typescript": "^1.3.0"
  },
  "devDependencies": {
    "@skarab/eslint-config": "^1.0.2",
    "@skarab/prettier-config": "^1.2.2",
    "@types/node": "^18.6.2",
    "eslint": "^8.20.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "simple-git-hooks": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "typescript": ">=4"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@7.6.0",
  "keywords": [
    "typescript",
    "tsconfig",
    "config",
    "init"
  ]
}
